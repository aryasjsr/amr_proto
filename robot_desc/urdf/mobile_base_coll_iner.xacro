<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--BASE FOOTPRINT  -->
  <link name="base_footprint"/>

  <!-- BASE -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.2"/> 
      </geometry>
      <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>

    <xacro:box_inertia  m="5.0" x="0.6" y="0.4" z="0.2" 
                        o_xyz="0 0 0.1" o_rpy="0 0 0"/>
  </link>

  <!-- LIDAR -->
  <link name="lidar_link">
    <visual>
      <geometry>
          <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <material name="white"/>
    </visual>    
  </link>

  <!-- MACRO FOR WHEEL LINK -->

  <xacro:macro name="wheel_link" params="prefix">
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry>
          <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="1.571 0.0 0.0"/>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
          <sphere radius="0.1"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="1.0" r="0.1" l="0.05" 
                              o_xyz="0 0 0" o_rpy="1.571 0 0" />
    </link>
  </xacro:macro>

  <!-- CALL MACRO FOR RIGHT WHEEL AND LEFT WHEEL -->
  <xacro:wheel_link prefix="left"/>
  <xacro:wheel_link prefix="right"/>



  <!-- CASTER WHEEL -->

  <link name="caster_wheel_link">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>

    <xacro:sphere_inertia m="0.5" r="0.05" 
                              o_xyz="0 0 0" o_rpy="0 0 0" />
  </link>

  <!-- BASE-LIDAR JOINT  -->
  <joint name="base_lidar_joint" type="fixed">
    <origin xyz="0 0 0.225" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="lidar_link"/>
  </joint>

  <!-- BASE-LEFT WHEEL JOINT -->
  <joint name="base_left_wheel_joint" type="continuous">
    <origin xyz="-0.15 0.225 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <axis xyz="0 1 0.0"/>
  </joint>

  <!-- BASE-RIGHT WHEEL JOINT -->
  <joint name="base_right_wheel_joint" type="continuous">
    <origin xyz="-0.15 -0.225 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <axis xyz="0 1 0.0"/>
  </joint>

  <!-- BASE-CASTER JOINT  -->
  <joint name="base_caster_wheel_joint" type="fixed">
    <origin xyz="0.2 0.0 -0.05" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="caster_wheel_link"/>
  </joint>

  <!-- BASE FOOTPRINT-BASE JOINT -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0.0 0 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>
</robot>